<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_background_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/hongbao_img_layout"
            android:layout_width="72dp"
            android:layout_height="74dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/hongbao_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/hb_red"
                />

            <TextView
                android:id="@+id/hongbao_list_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hongbao_img"
                android:layout_centerHorizontal="true"
               android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/colorHbYellow"
                android:textSize="@dimen/s24"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hongbao_img_layout"
            android:layout_alignTop="@+id/hongbao_img_layout"
            android:layout_toRightOf="@+id/hongbao_img_layout"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/hongbao_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#4a4a4a"
                android:textSize="@dimen/s15"
                />
            <TextView
                android:id="@+id/hongbao_list_item_dead_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="有效期至："
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/s11"
                />

            <TextView
                android:id="@+id/hongbao_list_item_time_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="项目期限："
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/s11"
                />
            <TextView
                android:id="@+id/hongbao_list_item_money_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="投资金额："
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/s11"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/hongbao_list_item_status_img"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/hb_unused"
            />

    </RelativeLayout>


</RelativeLayout>