<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_background_selector"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/hongbao_img_layout"
            android:layout_width="72dp"
            android:layout_height="74dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/hongbao_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/hb_red"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/hongbao_list_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hongbao_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/colorHbYellow"
                android:textSize="@dimen/s18" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/hongbao_choose_box"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/check_box_background_selector"
            android:button="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hongbao_img_layout"
            android:layout_alignTop="@+id/hongbao_img_layout"
            android:layout_toLeftOf="@+id/hongbao_choose_box"
            android:layout_toRightOf="@+id/hongbao_img_layout"
            android:orientation="vertical"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/hongbao_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#4a4a4a"
                android:textSize="@dimen/s15" />
            <TextView
                android:id="@+id/hongbao_list_item_dead_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="有效期至："
                android:textColor="#b8b8b8"
                android:textSize="@dimen/s11" />

            <TextView
                android:id="@+id/hongbao_list_item_time_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="项目期限："
                android:textColor="#b8b8b8"
                android:textSize="@dimen/s11" />
            <TextView
                android:id="@+id/hongbao_list_item_money_line"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="项目期限："
                android:textColor="#b8b8b8"
                android:textSize="@dimen/s11" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>