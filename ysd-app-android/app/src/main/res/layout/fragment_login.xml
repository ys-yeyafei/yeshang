<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_regist_bg"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0sp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/repayment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:id="@+id/login_regist_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="@string/angle_left"
                android:textColor="@color/colorBlack"
                android:textSize="24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="登录/注册"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:visibility="visible" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <EditText
            android:id="@+id/login_regist_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s50"
            android:layout_marginTop="@dimen/s20"
            android:background="@drawable/button_background_grey"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColorHint="#999999"
            android:textSize="@dimen/s15" />

        <TextView
            android:id="@+id/login_regist_phone_display"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s50"
            android:layout_below="@+id/login_regist_phone"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="#08ef3444"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#666666"
            android:textSize="23dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/login_regist_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_regist_phone"
            android:layout_marginTop="@dimen/s30"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_regist_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50"
                android:background="@drawable/button_background_pink"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="@dimen/s17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_regist_next"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="注册送588元红包"
                android:textColor="#ef3e44"
                android:textSize="@dimen/s14" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />


</LinearLayout>