<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_friends_whole_layout"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context="cn.ysgroup.ysdai.Activities.MyFriendActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/my_friends_friends_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="邀请好友数"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:id="@+id/my_friends_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorYellow"
                    android:textSize="16dp"
                    />

                <cn.ysgroup.ysdai.UI.IconFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="right"
                    android:text="@string/angle_right"
                    android:textColor="@color/colorGrey"
                    android:textSize="16dp"
                    />
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_friends_cash_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="现金奖励"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/angle_right"
                android:textColor="@color/colorGrey"
                android:textSize="16dp"
                />



        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="我的二维码"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/my_friend_er_wei_ma"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/colorGrey"
            />


    </LinearLayout>

    <Button
        android:id="@+id/my_friend_share_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_selector"
        android:text="邀请好友一起来理财"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        />

</LinearLayout>
