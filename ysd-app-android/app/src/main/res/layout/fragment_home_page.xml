<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/tools">


    <cn.ysgroup.ysdai.UI.MyRefresh
        android:id="@+id/page_home_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/home_page_project_layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:orientation="vertical">

                <cn.ysgroup.ysdai.UI.SlideShowView
                    android:id="@+id/home_page_slideshowView"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/home_page_slideshowView"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/trumpet" />

                    <cn.ysgroup.ysdai.UI.MarqueeTextView
                        android:id="@+id/marqueeview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="通知消息。。。"
                        app:mvAnimDuration="500"
                        app:mvInterval="8000"
                        app:mvTextSize="10sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/home_page_project_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/home_page_slideshowView"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="4"
                    android:background="#ffffff"
                    android:gravity="center_vertical">

                    <TextView

                        android:id="@+id/home_page_project_text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/home_page_project_people_count"
                        android:layout_marginLeft="8dp"
                        android:text="理财会员"
                        android:textSize="@dimen/s13" />

                    <TextView
                        android:id="@+id/home_page_project_people_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/home_page_project_text10"
                        android:text="— —"
                        android:textColor="#e60000"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="元"
                        android:textSize="@dimen/s13" />

                    <TextView
                        android:id="@+id/home_page_project_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/tv1"
                        android:text="— —"
                        android:textColor="#e60000"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/home_page_project_count"
                        android:text="投资总额"
                        android:textSize="@dimen/s13" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/home_page_project_people_count"
                        android:layout_toRightOf="@id/home_page_project_people_count"
                        android:text="人"
                        android:textSize="@dimen/s13" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_page_project_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/home_page_project_layout1"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="8"
                    android:background="#ffffff"
                    android:gravity="center_vertical">

                    <RelativeLayout

                        android:id="@+id/home_page_repay_more"
                        android:layout_width="120dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/activity" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="活动中心"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/s17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv"
                                android:layout_centerHorizontal="true"
                                android:text="点击查看"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/s11" />
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/home_page_project_rl_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/home_page_repay_more"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp">

                        <LinearLayout
                            android:id="@+id/ll5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_page_repay_introduce"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:ellipsize="end"
                                android:maxEms="9"
                                android:singleLine="true"
                                android:text="活动介绍! "
                                android:textColor="#505050"
                                android:textSize="@dimen/s14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:text=" "
                                android:textColor="#505050"
                                android:textSize="@dimen/s15" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="12dp"
                                android:background="@mipmap/hot" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/home_page_repay_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll5"
                            android:layout_marginTop="5dp"
                            android:text="2012-12-12"
                            android:textColor="#aeaeae"
                            android:textSize="@dimen/s11" />

                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp">


                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="详情"
                                android:textSize="@dimen/s14" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/more_tab" />
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/home_page_project_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/home_page_project_rl_more"
                    android:layout_weight="25"
                    android:background="#FFFFFF"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_page_project_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="    "
                            android:textColor="#030303"
                            android:textSize="@dimen/s16" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp">


                            <TextView
                                android:id="@+id/home_page_project_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="更多"
                                android:textSize="@dimen/s14"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center_vertical"
                                android:background="@mipmap/more_tab" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="14"
                        android:paddingTop="8dp">


                        <TextView

                            android:id="@+id/home_page_lhsy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_page_base_apr"
                            android:layout_centerHorizontal="true"
                            android:text="预期年化收益"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/s14" />


                        <LinearLayout
                            android:id="@+id/home_page_project_award_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/home_page_base_apr"
                            android:background="@mipmap/pupo_red"
                            android:visibility="visible">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:paddingLeft="10dp"
                                android:text="+"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s18" />

                            <TextView
                                android:id="@+id/home_page_award_apr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="10dp"
                                android:text="0%"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s20" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/home_page_base_apr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="0.0"
                            android:textColor="#ef3e44"
                            android:textSize="@dimen/s40" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/home_page_base_apr"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/home_page_base_apr"
                            android:text="%"
                            android:textColor="#ef3e44"
                            android:textSize="@dimen/s20" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/home_page_project_layout3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_page_project_peroid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#545454"
                                android:textSize="@dimen/s17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目期限"
                                android:textSize="@dimen/s13" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="#5f5f5f" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_page_project_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#545454"
                                android:textSize="@dimen/s17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总金额"
                                android:textSize="@dimen/s13" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="#5f5f5f" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_page_remaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#545454"
                                android:textSize="@dimen/s17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余金额"
                                android:textSize="@dimen/s13" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/home_page_project_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/home_page_project_layout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="8"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/home_page_project_iv2"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/money_bag" />

                    <TextView
                        android:id="@+id/home_page_project_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/home_page_project_iv2"
                        android:text="邀请好友拿"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/home_page_project_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toRightOf="@id/home_page_project_tv3"
                        android:text="现金"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/s16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/home_page_project_tv4"
                        android:layout_toRightOf="@+id/home_page_project_tv4"
                        android:text="奖励!"
                        android:textSize="@dimen/s14" />

                    <Button
                        android:id="@+id/fragement_more_activity_share_row"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/point_focus"
                        android:text="马上邀请"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s17" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/home_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/home_online"
                android:layout_width="@dimen/s39"
                android:layout_height="@dimen/s40"
                android:layout_below="@+id/home_view"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="80dp"
                android:background="@mipmap/home_online" />
        </RelativeLayout>
    </cn.ysgroup.ysdai.UI.MyRefresh>
</RelativeLayout>


