<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background_top_up"
    android:orientation="vertical">


    <TextView
        android:id="@+id/smessage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/s11"
        android:layout_marginRight="@dimen/s11"
        android:layout_marginTop="@dimen/s20"
        android:lineSpacingExtra="3dp"
        android:text="为了保护您的账户资金安全,请开启手势密码"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/s14" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/s20"
        android:layout_marginRight="@dimen/s20"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:text="您也可以在我的-设置-手势密码进行设置"
        android:textColor="#484848"
        android:textSize="@dimen/s12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/s20"
        android:background="#5f5f5f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s50"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/smessage_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="- -"
            android:textColor="#007fff"
            android:textSize="@dimen/s15" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#5f5f5f" />

        <TextView

            android:id="@+id/smessage_message1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="- -"
            android:textColor="#007fff"
            android:textSize="@dimen/s15" />


    </LinearLayout>

</LinearLayout>