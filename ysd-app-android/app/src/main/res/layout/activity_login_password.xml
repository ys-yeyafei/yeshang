<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_regist_bg"
    android:orientation="vertical"
    tools:context="cn.ysgroup.ysdai.Activities.LoginPasswordActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0sp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/repayment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:id="@+id/login_password_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="@string/angle_left"
                android:textColor="@color/colorBlack"
                android:textSize="24dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="登录"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:visibility="visible" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText

                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/s50"
                    android:background="@drawable/button_background_grey"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/s15" />

                <ImageView
                    android:id="@+id/login_password_open"
                    android:layout_width="@dimen/s25"
                    android:layout_height="@dimen/s16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/s15"
                    android:background="@mipmap/login_close" />

                <!--<ImageView-->
                <!--android:layout_centerVertical="true"-->
                <!--android:id="@+id/login_password_close"-->
                <!--android:layout_width="@dimen/s20"-->
                <!--android:layout_height="@dimen/s18"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_toLeftOf="@+id/login_password_open"-->
                <!--android:background="@mipmap/login_close" />-->
            </RelativeLayout>

            <Button
                android:id="@+id/login_password_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/s50"
                android:layout_marginTop="@dimen/s30"
                android:background="@drawable/button_background_pink"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/s17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login_password_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/s40"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:text="忘记密码？"
                    android:textColor="#333333"
                    android:textSize="@dimen/s13" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
