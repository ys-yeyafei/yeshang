<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_repay_ment"
    tools:context="cn.ysgroup.ysdai.Activities.RepayMentActivity">

    <android.support.design.widget.TabLayout
        app:tabTextColor="#606060"
        android:id="@+id/content_repay_ment_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="#ed0404"
        app:tabSelectedTextColor="#ed0404" />
    <android.support.v4.view.ViewPager
        android:id="@+id/content_repay_ment_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
