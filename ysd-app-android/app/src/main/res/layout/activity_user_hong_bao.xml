<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical"
    tools:context="cn.ysgroup.ysdai.Activities.UserHongBaoActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/my_hong_bao_hb_money_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="红包金额"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/my_hong_bao_hb_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="@color/colorGrey"
                android:textSize="15dp"

                />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_hong_bao_all_get_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="累计获得红包"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"

                />


            <TextView
                android:id="@+id/my_hong_bao_all_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="@color/colorGrey"
                android:textSize="15dp"
                />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_hong_bao_all_use_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="累计使用红包"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/my_hong_bao_all_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="@color/colorGrey"
                android:textSize="15dp"
                />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_hong_bao_mine_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="我的红包"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/angle_right"
                android:textColor="@color/colorGrey"
                android:textSize="16dp"
                />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_hong_bao_minxi_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="红包明细"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/angle_right"
                android:textColor="@color/colorGrey"
                android:textSize="16dp"
                />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/my_hong_bao_friends_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="邀请好友数"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:id="@+id/my_hong_bao_friends_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorYellow"
                    android:textSize="16dp"
                    />

                <cn.ysgroup.ysdai.UI.IconFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="right"
                    android:text="@string/angle_right"
                    android:textColor="@color/colorGrey"
                    android:textSize="16dp"
                    />
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"/>

        <TableRow
            android:id="@+id/my_hong_bao_cash_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="现金奖励"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />

            <cn.ysgroup.ysdai.UI.IconFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/angle_right"
                android:textColor="@color/colorGrey"
                android:textSize="16dp"
                />



        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text="我的二维码"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            />

        <ImageView
            android:id="@+id/my_hong_bao_er_wei_ma"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/colorGrey"
            />


    </LinearLayout>

</LinearLayout>
