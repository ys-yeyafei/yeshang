<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.ysgroup.ysdai.UI.OneViewPage

        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0">

    </cn.ysgroup.ysdai.UI.OneViewPage>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cacaca"/>

    <LinearLayout
        android:id="@+id/home_tab"
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_shouye_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_shouye_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/shouye_selected" />

            <TextView
                android:id="@+id/home_shouye_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="乐商贷"
                android:textColor="@color/red_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_list_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_list_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/list" />

            <TextView
                android:id="@+id/home_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="产品"
                android:textColor="@color/colorGrey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_zhanghu_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_zhanghu_iv"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:background="@mipmap/zhanghu" />

            <TextView
                android:id="@+id/home_zhanghu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的"
                android:textColor="@color/colorGrey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_more_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_more_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/more" />

            <TextView
                android:id="@+id/home_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="更多"
                android:textColor="@color/colorGrey" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>