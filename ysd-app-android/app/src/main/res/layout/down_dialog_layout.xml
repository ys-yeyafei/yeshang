<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/s150"
        android:layout_marginLeft="@dimen/s30"
        android:layout_marginRight="@dimen/s30"
        android:layout_marginTop="@dimen/s70"
        android:background="@mipmap/down_ui"
        android:paddingLeft="@dimen/s20"
        android:paddingRight="@dimen/s20">

        <TextView
            android:id="@+id/down_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/s70"
            android:text="V2.00"
            android:textColor="#ffffff"
            android:textSize="@dimen/s16" />

        <View
            android:id="@+id/down_view"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/down_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/down_now"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/s30"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="立即下载"
                android:textColor="@color/red_button"
                android:textSize="@dimen/s17" />

            <TextView
                android:id="@+id/down_cancle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/s30"
                android:layout_marginRight="@dimen/s20"
                android:layout_toLeftOf="@+id/down_now"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/s17" />

        </RelativeLayout>

        <ListView
            android:layout_height="wrap_content"
            android:layout_below="@+id/down_view"
            android:id="@+id/down_list"
            android:layout_width="match_parent"
            android:layout_above="@+id/down_rl"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent" />




    </RelativeLayout>
</LinearLayout>